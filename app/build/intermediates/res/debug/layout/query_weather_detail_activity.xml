<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_big2"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="true">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:minHeight="?attr/actionBarSize" />

    <RadioGroup
        android:id="@+id/rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="0.5dp" >

        <RadioButton
            android:id="@+id/rb_rg_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableBottom="@drawable/community_radiobutton_line_white_check_selector"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="今天"
            android:textColor="@color/community_radiogroup_white2gray_text_selector"
            android:textSize="13sp" />

        <RadioButton
            android:id="@+id/rb_rg_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableBottom="@drawable/community_radiobutton_line_white_check_selector"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="今天"
            android:textColor="@color/community_radiogroup_white2gray_text_selector"
            android:textSize="13sp" />

        <RadioButton
            android:id="@+id/rb_rg_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
