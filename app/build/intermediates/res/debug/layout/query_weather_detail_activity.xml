            android:drawablePadding="5dp"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="今天"
            android:textColor="@color/community_radiogroup_white2gray_text_selector"
            android:textSize="13sp" />

        <RadioButton
            android:id="@+id/rb_rg_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableBottom="@drawable/community_radiobutton_line_white_check_selector"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="今天"
            android:textColor="@color/community_radiogroup_white2gray_text_selector"
            android:textSize="13sp" />

        <RadioButton
            android:id="@+id/rb_rg_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableBottom="@drawable/community_radiobutton_line_white_check_selector"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="今天"
            android:textColor="@color/community_radiogroup_white2gray_text_selector"
            android:textSize="13sp" />

        <RadioButton
            android:id="@+id/rb_rg_6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
