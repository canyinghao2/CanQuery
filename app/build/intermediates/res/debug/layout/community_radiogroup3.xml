<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="30dp" 
    android:paddingRight="30dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <RadioGroup
        android:id="@+id/rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/community_white_round_shape"
        android:orientation="horizontal"
        android:padding="0.5dp" >

        <RadioButton
            android:id="@+id/rb_rg_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/community_rg_blue2white_round_selector"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="好友"
            android:textColor="@color/community_radiogroup_text_selector"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/rb_rg_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="@drawable/community_rg_blue2white_round_selector"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="会话"
            android:textColor="@color/community_radiogroup_text_selector"
            android:textSize="14sp" />
        <RadioButton
            android:id="@+id/rb_rg_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="@drawable/community_rg_blue2white_round_selector"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="会话"
            android:textColor="@color/community_radiogroup_text_selector"
            android:textSize="14sp" />
    </RadioGroup>

